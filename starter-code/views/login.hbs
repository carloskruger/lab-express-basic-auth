<h1>Inicio de sesion</h1>

<form action="/login" method="post">
        <div class="form-group">
          <label for="user-input">Usuario</label>
          <input name="user" type="text" class="form-control" id="user-input">
        </div>

        <div class="form-group">
          <label for="password-input">Contrase√±a</label>
          <input name="password" type="password" class="form-control" id="password-input">
        </div>
        {{#if errorMsg}}

        <div class="alert alert-danger" role="alert">
          {{errorMsg}}
        </div>
        {{/if}}
        <button type="submit" class="btn btn-dark">Iniciar sesion</button>

      </form>